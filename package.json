{
  "name": "indexer",
  "version": "0.9.1",
  "scripts": {
    "postinstall": "husky || true",
    "watch": "tsc --watch --noEmit -p tsconfig.json",
    "type-check": "tsc-files --pretty --project ./tsconfig.json --noEmit --module ESNext --declaration",
    "clean": "tsc --clean",
    "build": "tsc --build",
    "codegen": "envio codegen",
    "dev": "envio dev",
    "migrate": "envio local db-migrate setup",
    "test": "mocha",
    "start": "ts-node generated/src/Index.bs.js",
    "format": "prettier --write .",
    "compile": "genql --endpoint http://localhost:8080/v1/graphql --prefix GQL --output graphql/src/gen && prettier --write graphql/src/gen/**/*.ts && eslint --fix graphql/src/gen/**/*.ts",
    "release": "standard-version -a",
    "release:pub": "git push --follow-tags origin $(git rev-parse --abbrev-ref HEAD)"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "pnpm type-check"
    ],
    "*.{ts,tsx,js,jsx,mjs,cjs,json,css}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "resolutions": {
    "typescript": "^5.7.2"
  },
  "peerDependencies": {
    "viem": "^2.21.0"
  },
  "dependencies": {
    "envio": "^2.8.2",
    "geckoterm": "^0.2.4",
    "node-ts-cache": "^4.4.0",
    "node-ts-cache-storage-memory": "^4.4.0",
    "node-ts-cache-storage-node-fs": "^4.4.0"
  },
  "optionalDependencies": {
    "generated": "./generated"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.0",
    "@commitlint/config-conventional": "^19.6.0",
    "@genql/cli": "^6.3.3",
    "@types/chai": "^5.0.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.8.8",
    "chai": "^5.1.2",
    "eslint-plugin-import-x": "4.6.1",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.3.0",
    "mocha": "^11.0.1",
    "prettier": "^3.4.2",
    "standard-version": "^9.5.0",
    "ts-node": "10.9.1",
    "tsc-files": "^1.1.4",
    "type-fest": "^4.32.0",
    "typescript-eslint": "^8.21.0"
  }
}
