{
  "include": ["src", "tests"],
  "compilerOptions": {
    "target": "es2020", //required for use with BigInt types
    "module": "commonjs",
    "lib": ["es2020"],
    "allowJs": true,
    "checkJs": false,
    "outDir": "build",
    "rootDirs": ["src", "generated", "tests"],
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  }
}
